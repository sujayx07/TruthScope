{
  "manifest_version": 3,
  "name": "TruthScope",
  "version": "1.1",
  "description": "Analyzes web content for potential misinformation using AI.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "sidePanel",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "icons": {
    "16": "icon16.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://127.0.0.1:3000/*"
  ]
}
